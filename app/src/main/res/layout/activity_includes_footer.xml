<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="includeViewModel"
            type="com.example.llcgs.android_kotlin.mvvm.includes.viewmodel.IncludesViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="footer"
            android:text="@{includeViewModel.footer.footerTitle}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="footerContent"
            android:text="@{includeViewModel.footer.footerContent}"/>

    </LinearLayout>

</layout>