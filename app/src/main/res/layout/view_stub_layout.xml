<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewStubViewModel"
            type="com.example.llcgs.android_kotlin.mvvm.viewstubs.viewmodel.ViewStubViewModel"/>

    </data>

    <LinearLayout
        android:id="@+id/subLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_color"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/sub1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_12"
            android:gravity="center"
            tools:text="name"
            android:text="@{viewStubViewModel.viewStubModel.sub1}"/>

        <View
            android:layout_width="@dimen/merchant_select_1px"
            android:layout_height="match_parent"
            android:background="@color/BDBDBD"/>

        <TextView
            android:id="@+id/sub2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_12"
            android:gravity="center"
            tools:text="age"
            android:text="@{viewStubViewModel.viewStubModel.sub2}"/>

        <View
            android:layout_width="@dimen/merchant_select_1px"
            android:layout_height="match_parent"
            android:background="@color/BDBDBD"/>

        <TextView
            android:id="@+id/sub3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_12"
            android:gravity="center"
            tools:text="address"
            android:text="@{viewStubViewModel.viewStubModel.sub3}"/>

    </LinearLayout>

</layout>